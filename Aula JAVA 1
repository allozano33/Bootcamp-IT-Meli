Exercicio 3
        Scanner keyPad = new Scanner(System.in);
        int costperday;
        costperday =2;
        int daysOfCampaign;
        int numberOfDays;
        System.out.println("Informe a Quantidade de dias da Campanha:  ") ;
        numberOfDays = keyPad.nextInt();
        daysOfCampaign = costperday*numberOfDays;
        System.out.println ( numberOfDays + " Custo dos dias de Campanha " + daysOfCampaign );
